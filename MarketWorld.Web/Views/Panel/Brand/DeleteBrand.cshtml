@model MarketWorld.Domain.Entities.Brand
@{
    ViewData["Title"] = "Marka Sil";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">
                <i class="bi bi-trash me-2"></i>Marka Sil
            </h5>
        </div>
        <div class="card-body p-4">
            <div class="alert alert-warning mb-4">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>@Model.Name</strong> markasını silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.
            </div>
            
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">Marka Bilgileri</h6>
                            <ul class="list-unstyled">
                                <li><strong>ID:</strong> @Model.Id</li>
                                <li><strong>Ad:</strong> @Model.Name</li>
                                <li><strong>Durum:</strong> @(Model.IsDeleted ? "Pasif" : "Aktif")</li>
                                <li><strong>Ürün Sayısı:</strong> @(Model.Products?.Count ?? 0)</li>
                                <li><strong>Oluşturulma Tarihi:</strong> @(Model.CreatedDate?.ToString("dd.MM.yyyy HH:mm") ?? "-")</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
            <form method="post" action="/Panel/DeleteBrand/@Model.Id">
                <div class="d-flex justify-content-between mt-4">
                    <a href="/Panel/Brands" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Geri Dön
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Markayı Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 