<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MarketWorld</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" alt="MarketWorld Logo" class="navbar-logo">
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <i class="bi bi-list fs-1"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                Elektronik
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Bilgisayarlar & Tabletler</a></li>
                                <li><a class="dropdown-item" href="#">Yazıcılar & Projeksiyon</a></li>
                                <li><a class="dropdown-item" href="#">Telefonlar</a></li>
                                <li><a class="dropdown-item" href="#">Beyaz Eşya</a></li>
                                <li><a class="dropdown-item" href="#">Klima ve Isıtıcılar</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Giyim & Aksesuar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Ev & Yaşam</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Kozmetik</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Spor</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <button class="btn btn-link text-dark me-3" type="button" data-bs-toggle="modal" data-bs-target="#searchModal">
                            <i class="bi bi-search"></i>
                        </button>
                        <a href="#" class="btn btn-link text-dark me-3">
                            <i class="bi bi-heart"></i>
                        </a>
                        <a href="#" class="btn btn-link text-dark me-3">
                            <i class="bi bi-person"></i>
                        </a>
                        <a href="#" class="btn btn-link text-dark position-relative">
                            <i class="bi bi-cart3"></i>
                            <span class="cart-count">0</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="mt-5">
        @RenderBody()
    </main>

    <footer class="footer bg-white border-top">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-3">
                    <img src="~/img/logo.png" alt="MarketWorld Logo" class="footer-logo mb-3">
                    <p class="text-muted mb-3">Türkiye'nin en güvenilir e-ticaret platformu.</p>
                    <div class="social-links">
                        <a href="#" class="me-3 text-dark"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="me-3 text-dark"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="me-3 text-dark"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="me-3 text-dark"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
                <div class="col-lg-2">
                    <h6 class="fw-bold mb-4">Kategoriler</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Elektronik</a></li>
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Giyim & Aksesuar</a></li>
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Ev & Yaşam</a></li>
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Kozmetik</a></li>
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Spor & Outdoor</a></li>
                    </ul>
                </div>
                <div class="col-lg-2">
                    <h6 class="fw-bold mb-4">Kurumsal</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Hakkımızda</a></li>
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Kariyer</a></li>
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">İletişim</a></li>
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Blog</a></li>
                    </ul>
                </div>
                <div class="col-lg-2">
                    <h6 class="fw-bold mb-4">Müşteri Hizmetleri</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Sipariş Takibi</a></li>
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">İade ve Değişim</a></li>
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Sıkça Sorulan Sorular</a></li>
                    </ul>
                </div>
                <div class="col-lg-3">
                    <h6 class="fw-bold mb-4">E-Bülten</h6>
                    <p class="text-muted mb-4">Kampanyalardan haberdar olmak için bültenimize abone olun.</p>
                    <form class="newsletter-form">
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="E-posta adresiniz">
                            <button class="btn btn-primary" type="submit">Abone Ol</button>
                        </div>
                    </form>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-muted mb-md-0">© 2024 MarketWorld. Tüm hakları saklıdır.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="#" class="text-muted text-decoration-none me-3">Gizlilik Politikası</a>
                    <a href="#" class="text-muted text-decoration-none me-3">Kullanım Koşulları</a>
                    <a href="#" class="text-muted text-decoration-none">KVKK</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
