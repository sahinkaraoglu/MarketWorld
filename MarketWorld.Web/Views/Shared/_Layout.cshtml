<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MarketWorld</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" alt="MarketWorld Logo" class="navbar-logo">
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <i class="bi bi-list fs-1"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Elektronik</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Giyim & Aksesuar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Ev & Yaşam</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Kozmetik</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Spor</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <button class="btn btn-link text-dark me-3" type="button" data-bs-toggle="modal" data-bs-target="#searchModal">
                            <i class="bi bi-search"></i>
                        </button>
                        <a href="#" class="btn btn-link text-dark me-3">
                            <i class="bi bi-heart"></i>
                        </a>
                        <a href="#" class="btn btn-link text-dark me-3">
                            <i class="bi bi-person"></i>
                        </a>
                        <a href="#" class="btn btn-link text-dark position-relative">
                            <i class="bi bi-cart3"></i>
                            <span class="cart-count">0</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3 mt-5">
        @RenderBody()
    </main>

    <footer class="footer bg-light py-5 mt-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <h5 class="fw-bold mb-3">MarketWorld</h5>
                    <p class="text-muted">En iyi alışveriş deneyimi için buradayız.</p>
                    <div class="social-links">
                        <a href="#" class="me-2"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="me-2"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="me-2"><i class="bi bi-twitter"></i></a>
                    </div>
                </div>
                <div class="col-lg-2">
                    <h6 class="fw-bold mb-3">Kategoriler</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Elektronik</a></li>
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Giyim</a></li>
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Ev & Yaşam</a></li>
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Kozmetik</a></li>
                    </ul>
                </div>
                <div class="col-lg-2">
                    <h6 class="fw-bold mb-3">Yardım</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Sipariş Takibi</a></li>
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">İade ve Değişim</a></li>
                        <li><a href="#" class="text-muted text-decoration-none mb-2 d-block">Sıkça Sorulan Sorular</a></li>
                    </ul>
                </div>
                <div class="col-lg-4">
                    <h6 class="fw-bold mb-3">Bültenimize Katılın</h6>
                    <p class="text-muted">En yeni ürünler ve kampanyalardan haberdar olun.</p>
                    <form class="d-flex">
                        <input type="email" class="form-control me-2" placeholder="E-posta adresiniz">
                        <button class="btn btn-primary">Katıl</button>
                    </form>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
