@model MarketWorld.Core.Domain.Entities.Order

@{
    ViewData["Title"] = "Sipariş Onayı";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    <h2 class="mt-3">Siparişiniz Alındı!</h2>
                    <p class="lead">Sipariş numaranız: #@Model.Id</p>
                    <p class="text-muted">Siparişiniz başarıyla oluşturuldu. Siparişinizle ilgili detayları aşağıda bulabilirsiniz.</p>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h4>Sipariş Detayları</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Teslimat Adresi</h5>
                            <p>
                                @Model.ShippingAddress.FullName<br />
                                @Model.ShippingAddress.FullAddress<br />
                                @Model.ShippingAddress.City, @Model.ShippingAddress.PostalCode<br />
                                @Model.ShippingAddress.Phone
                            </p>
                        </div>
                    </div>

                    <hr />

                    <h5>Sipariş Edilen Ürünler</h5>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Ürün</th>
                                    <th>Adet</th>
                                    <th>Birim Fiyat</th>
                                    <th>Toplam</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.Product.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.UnitPrice TL</td>
                                        <td>@(item.Quantity * item.UnitPrice) TL</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Toplam Tutar:</strong></td>
                                    <td><strong>@Model.TotalAmount TL</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Alışverişe Devam Et</a>
                <a asp-controller="Order" asp-action="PrintOrder" asp-route-id="@Model.Id" class="btn btn-secondary">Siparişi Yazdır</a>
            </div>
        </div>
    </div>
</div> 