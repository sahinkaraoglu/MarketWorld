@model MarketWorld.Core.Domain.Entities.Order

@{
    ViewData["Title"] = "Sipariş Onayı";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card order-confirmation-card">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle text-success confirmation-icon"></i>
                    <h2 class="mt-3 confirmation-title">Siparişiniz Alındı!</h2>
                    <p class="lead order-number">Sipariş numaranız: #@Model.OrderNumber</p>
                    <p class="text-muted confirmation-message">Siparişiniz başarıyla oluşturuldu. Siparişinizle ilgili detayları aşağıda bulabilirsiniz.</p>
                </div>
            </div>

            <div class="card order-details-card mt-4">
                <div class="card-header">
                    <h4 class="details-title">Sipariş Detayları</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="address-title">Teslimat Adresi</h5>
                            <p class="address-details">
                                @Model.ShippingAddress.FullName<br />
                                @Model.ShippingAddress.FullAddress<br />
                                @Model.ShippingAddress.City, @Model.ShippingAddress.PostalCode<br />
                                @Model.ShippingAddress.Phone
                            </p>
                        </div>
                    </div>

                    <hr class="divider" />

                    <h5 class="products-title">Sipariş Edilen Ürünler</h5>
                    <div class="table-responsive">
                        <table class="table order-items-table">
                            <thead>
                                <tr>
                                    <th>Ürün</th>
                                    <th>Adet</th>
                                    <th>Birim Fiyat</th>
                                    <th>Toplam</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.Product.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.UnitPrice TL</td>
                                        <td>@(item.Quantity * item.UnitPrice) TL</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Toplam Tutar:</strong></td>
                                    <td><strong>@Model.TotalAmount TL</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4 action-buttons">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary continue-shopping-btn">Alışverişe Devam Et</a>
                <a asp-controller="Order" asp-action="PrintOrder" asp-route-id="@Model.Id" class="btn btn-secondary print-order-btn">Siparişi Yazdır</a>
            </div>
            <br />
        </div>
    </div>
</div>

<style>
    .order-confirmation-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        background: linear-gradient(135deg, #ffffff, #f8f9fa);
    }

    .confirmation-icon {
        font-size: 4.5rem;
        color: #2e7d32;
        margin-bottom: 1rem;
    }

    .confirmation-title {
        color: #2c3e50;
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .order-number {
        color: #4e73df;
        font-weight: 600;
        font-size: 1.2rem;
    }

    .confirmation-message {
        color: #6B7280;
        font-size: 1.1rem;
        max-width: 600px;
        margin: 0 auto;
    }

    .order-details-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        background: linear-gradient(135deg, #2c3e50, #4ca1af);
        color: white;
        border-radius: 12px 12px 0 0 !important;
        padding: 1.25rem;
    }

    .details-title {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
    }

    .address-title, .products-title {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .address-details {
        color: #4B5563;
        line-height: 1.6;
    }

    .divider {
        margin: 1.5rem 0;
        border-color: #E5E7EB;
    }

    .order-items-table {
        margin-bottom: 0;
    }

    .order-items-table thead th {
        background-color: #F9FAFB;
        color: #374151;
        font-weight: 600;
        border-bottom: 2px solid #E5E7EB;
    }

    .order-items-table tbody td {
        color: #4B5563;
        vertical-align: middle;
    }

    .order-items-table tfoot td {
        border-top: 2px solid #E5E7EB;
        color: #2c3e50;
        font-size: 1.1rem;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .continue-shopping-btn {
        background: linear-gradient(135deg, #4e73df, #224abe);
        border: none;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .continue-shopping-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(78, 115, 223, 0.2);
    }

    .print-order-btn {
        background: #F3F4F6;
        color: #4B5563;
        border: none;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .print-order-btn:hover {
        background: #E5E7EB;
        color: #374151;
        transform: translateY(-2px);
    }

    @@media (max-width: 768px) {
        .confirmation-title {
            font-size: 1.75rem;
        }

        .order-number {
            font-size: 1.1rem;
        }

        .action-buttons {
            flex-direction: column;
        }

        .continue-shopping-btn, .print-order-btn {
            width: 100%;
        }
    }
</style> 