@model MarketWorld.Core.Domain.Entities.Order

@if (TempData["OrderError"] != null)
{
    <div class="alert alert-danger">@TempData["OrderError"]</div>
}

@{
    ViewData["Title"] = "Sipariş Tamamlama";
    var userAddresses = ViewBag.UserAddresses as List<MarketWorld.Core.Domain.Entities.Address>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="mb-3"><i class="bi bi-geo-alt-fill"></i> Adres Bilgileri</h5>
                    <form asp-action="Checkout" asp-controller="Order" method="post" id="checkoutForm">
                        <div class="mb-3">
                            <label class="form-label">Teslimat Adresi</label>
                            <div>
                                @if (userAddresses != null && userAddresses.Any())
                                {
                                    foreach (var address in userAddresses)
                                    {
                                        <div class="address-card" onclick="selectAddress(@address.Id)">
                                            <input class="form-check-input address-radio" type="radio" name="ShippingAddressId" id="address_@address.Id" value="@address.Id" @(address.IsDefault ? "checked" : "") required>
                                            <label class="form-check-label" for="address_@address.Id">
                                                <strong>@address.Title</strong><br />
                                                @address.FullAddress<br />
                                                @address.City
                                            </label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="alert alert-warning">Kayıtlı adresiniz bulunamadı. <a href="/Account/Addresses">Adres ekleyin</a>.</div>
                                }
                            </div>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="sameAsShipping" checked>
                            <label class="form-check-label" for="sameAsShipping">
                                Fatura adresi teslimat adresi ile aynı
                            </label>
                        </div>
                        <div id="billingAddressSection" style="display:none;">
                            <label class="form-label">Fatura Adresi</label>
                            <div>
                                @if (userAddresses != null && userAddresses.Any())
                                {
                                    foreach (var address in userAddresses)
                                    {
                                        <div class="address-card" onclick="selectBillingAddress(@address.Id)">
                                            <input class="form-check-input address-radio" type="radio" name="BillingAddressId" id="billaddress_@address.Id" value="@address.Id">
                                            <label class="form-check-label" for="billaddress_@address.Id">
                                                <strong>@address.Title</strong><br />
                                                @address.FullAddress<br />
                                                @address.City
                                            </label>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                        <hr />
                        <h5 class="mb-3"><i class="bi bi-credit-card-2-front"></i> Ödeme Yöntemi</h5>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="payment-card" id="creditCardOption" onclick="selectPayment('credit')">
                                    <input class="form-check-input payment-radio" type="radio" name="PaymentMethod" id="payment_credit" value="CreditCard" checked>
                                    <label class="form-check-label" for="payment_credit">
                                        <i class="bi bi-credit-card-2-front"></i> Kredi Kartı <span class="text-muted small">Güvenli ödeme</span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="payment-card" id="eftOption" onclick="selectPayment('eft')">
                                    <input class="form-check-input payment-radio" type="radio" name="PaymentMethod" id="payment_eft" value="EFT">
                                    <label class="form-check-label" for="payment_eft">
                                        <i class="bi bi-bank"></i> Havale / EFT <span class="text-muted small">Banka hesabımıza transfer</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div id="creditcard" class="payment-detail">
                            <div class="row g-3">
                                <div class="col-md-12">
                                    <label class="form-label">Kart Üzerindeki İsim <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="CardName" required placeholder="Kart üzerindeki isim">
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label">Kart Numarası <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="CardNumber" maxlength="19" required placeholder="XXXX XXXX XXXX XXXX">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Son Kullanma Tarihi <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="ExpiryDate" maxlength="5" required placeholder="AA/YY">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">CVV <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="CVV" maxlength="4" required placeholder="CVV">
                                </div>
                            </div>
                        </div>
                        <div id="eft" class="payment-detail" style="display:none;">
                            <div class="alert alert-info mt-3">
                                Banka hesaplarımıza transfer ile ödeme yapabilirsiniz. Sipariş sonrası hesap bilgileri gösterilecektir.
                            </div>
                        </div>
                        <div class="d-grid gap-2 mt-4">
                            <input type="hidden" name="ShippingAddressId" id="hiddenShippingAddressId" value="" />
                            <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-lock"></i> Siparişi Tamamla</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="mb-3"><i class="bi bi-receipt"></i> Sipariş Özeti</h5>
                    <ul class="list-group mb-3">
                        @foreach (var item in ViewBag.CartItems)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@item.Product.Name<span class="badge bg-secondary">@item.Quantity</span> </span>
                                <span>@(item.Quantity * item.Product.Price) TL</span>
                            </li>
                        }
                    </ul>
                    <ul class="list-group mb-3">
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Ara Toplam</span>
                            <span>@ViewBag.TotalAmount TL</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Kargo</span>
                            <span class="text-success">Ücretsiz</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between fw-bold">
                            <span>Toplam</span>
                            <span class="text-primary">@ViewBag.TotalAmount TL</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>



<style>
    .address-card, .payment-card {
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1rem;
        background: #fff;
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
    }
    .address-card:hover, .payment-card:hover {
        border-color: #2196F3 !important;
        box-shadow: 0 0 0 0.25rem rgba(33, 150, 243, 0.15);
    }
    .address-card.selected, .payment-card.selected {
        border-color: #2196F3 !important;
        box-shadow: 0 0 0 0.25rem rgba(33, 150, 243, 0.25);
    }
    .address-radio, .payment-radio {
        position: absolute;
        top: 1rem;
        right: 1rem;
        z-index: 2;
    }
    .form-check-input:checked {
        background-color: #2196F3;
        border-color: #2196F3;
    }
</style>


@section Scripts {
    <script>
        function selectAddress(id) {
            $('.address-card').removeClass('selected');
            $('#address_' + id).closest('.address-card').addClass('selected');
            $('#address_' + id).prop('checked', true);
        }
        function selectBillingAddress(id) {
            $('.address-card').removeClass('selected');
            $('#billaddress_' + id).closest('.address-card').addClass('selected');
            $('#billaddress_' + id).prop('checked', true);
        }
        function selectPayment(type) {
            $('.payment-card').removeClass('selected');
            if (type === 'credit') {
                $('#creditCardOption').addClass('selected');
                $('#creditcard').show();
                $('#eft').hide();
                $('#payment_credit').prop('checked', true);
            } else {
                $('#eftOption').addClass('selected');
                $('#eft').show();
                $('#creditcard').hide();
                $('#payment_eft').prop('checked', true);
            }
        }
        $(document).ready(function () {
            // Adres kartı seçili başlat
            $('.address-card input[type=radio]').each(function () {
                if ($(this).is(':checked')) {
                    $(this).closest('.address-card').addClass('selected');
                }
            });
            $('.address-card').click(function () {
                $('.address-card').removeClass('selected');
                $(this).addClass('selected');
                $(this).find('input[type=radio]').prop('checked', true);
            });
            // Fatura adresi kutucuğu
            $('#sameAsShipping').change(function () {
                if ($(this).is(':checked')) {
                    $('#billingAddressSection').hide();
                } else {
                    $('#billingAddressSection').show();
                }
            });
            // Ödeme kartı seçili başlat
            if ($('#payment_credit').is(':checked')) {
                $('#creditCardOption').addClass('selected');
                $('#creditcard').show();
                $('#eft').hide();
            } else {
                $('#eftOption').addClass('selected');
                $('#eft').show();
                $('#creditcard').hide();
            }
            $('.payment-card').click(function () {
                $('.payment-card').removeClass('selected');
                $(this).addClass('selected');
                $(this).find('input[type=radio]').prop('checked', true);
                if ($(this).find('input[type=radio]').val() === 'CreditCard') {
                    $('#creditcard').show();
                    $('#eft').hide();
                } else {
                    $('#eft').show();
                    $('#creditcard').hide();
                }
            });
            // Kart numarası formatı
            $('input[name="CardNumber"]').on('input', function () {
                var value = $(this).val().replace(/\D/g, '');
                var formattedValue = '';
                for (var i = 0; i < value.length; i++) {
                    if (i > 0 && i % 4 === 0) {
                        formattedValue += ' ';
                    }
                    formattedValue += value[i];
                }
                $(this).val(formattedValue);
            });
            // Son kullanma tarihi formatı
            $('input[name="ExpiryDate"]').on('input', function () {
                var value = $(this).val().replace(/\D/g, '');
                if (value.length > 2) {
                    value = value.substring(0, 2) + '/' + value.substring(2);
                }
                $(this).val(value);
            });
            // Form submit olmadan önce seçili adresleri hidden inputlara yaz
            $('#checkoutForm').submit(function () {
                var shippingId = $('input[name="ShippingAddressId"]:checked').val();
                var billingId = $('input[name="BillingAddressId"]:checked').val();
                $('#hiddenShippingAddressId').val(shippingId);
                $('#hiddenBillingAddressId').val(billingId);
            });
        });
    </script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
} 