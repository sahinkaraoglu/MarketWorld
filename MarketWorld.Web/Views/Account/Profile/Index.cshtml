@{
    ViewData["Title"] = "Hesabım";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-3">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary text-white rounded-circle p-3 me-3">
                            <i class="fas fa-user"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">@(ViewBag.FirstName != null ? ViewBag.FirstName : "Kullanıcı") @(ViewBag.LastName ?? "")</h5>
                            <p class="text-muted small mb-0">@ViewBag.UserId</p>
                        </div>
                    </div>
                    
                    <div class="list-group">
                        <a href="@Url.Action("Index", "Account")" class="list-group-item list-group-item-action active">
                            <i class="fas fa-user-circle me-2"></i>Hesabım
                        </a>
                        <a href="@Url.Action("Orders", "Account")" class="list-group-item list-group-item-action">
                            <i class="fas fa-shopping-bag me-2"></i>Siparişlerim
                        </a>
                        <a href="@Url.Action("Addresses", "Account")" class="list-group-item list-group-item-action">
                            <i class="fas fa-map-marker-alt me-2"></i>Adreslerim
                        </a>
                        <a href="@Url.Action("Logout", "Login")" class="list-group-item list-group-item-action text-danger">
                            <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-9">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-circle me-2 text-primary"></i>Hesap Bilgilerim
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Ad</label>
                            <div class="form-control bg-light">@(ViewBag.FirstName ?? "-")</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Soyad</label>
                            <div class="form-control bg-light">@(ViewBag.LastName ?? "-")</div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">E-posta</label>
                            <div class="form-control bg-light">@(ViewBag.Email ?? "-")</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Telefon</label>
                            <div class="form-control bg-light">@(ViewBag.Phone ?? "-")</div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Üyelik Tarihi</label>
                            <div class="form-control bg-light">@(ViewBag.CreateDate ?? "-")</div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-end mt-4">
                        <a href="@Url.Action("Edit", "Account")" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Hesabı Düzenle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 