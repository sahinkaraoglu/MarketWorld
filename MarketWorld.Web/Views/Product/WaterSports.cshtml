@model List<MarketWorld.Web.Models.ProductViewModel> 

@{
    ViewData["Title"] = "Su Sporları Ürünleri";
}

@section Styles {
    <link rel="stylesheet" href="~/css/phones.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
}

<div class="container py-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb phones-breadcrumb">
            <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Spor & Outdoor</li>
            <li class="breadcrumb-item active">Su Sporları</li>
        </ol>
    </nav>

    <div class="container-fluid py-4">
        <div class="row">
            <!-- Filtreler -->
            <div class="col-md-3">
                <div class="card filter-card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Filtreler</h5>
                        
                        <!-- Fiyat Aralığı -->
                        <div class="filter-section">
                            <h6 class="filter-section-title">Fiyat Aralığı</h6>
                            <div class="input-group mb-3">
                                <input type="number" class="form-control" placeholder="Min">
                                <input type="number" class="form-control" placeholder="Max">
                            </div>
                        </div>

                        <!-- Marka -->
                        <div class="filter-section">
                            <h6 class="filter-section-title">Marka</h6>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" value="speedo" id="speedo">
                                <label class="form-check-label" for="speedo">Speedo</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" value="arena" id="arena">
                                <label class="form-check-label" for="arena">Arena</label>
                            </div>
                        </div>

                        <!-- Değerlendirme -->
                        <div class="filter-section">
                            <h6 class="filter-section-title">Değerlendirme</h6>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="rating" value="4" id="rating4">
                                <label class="form-check-label" for="rating4">
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                    ve üzeri
                                </label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="rating" value="3" id="rating3">
                                <label class="form-check-label" for="rating3">
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                    ve üzeri
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ürün Listesi -->
            <div class="col-md-9">
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @foreach (var product in Model)
                    {
                        <div class="col">
                            <div class="card product-card h-100">
                                <div class="position-relative">
                                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" 
                                         onerror="this.src='/img/default-product.jpg';" />
                                    <button class="favorite-btn position-absolute top-0 end-0 m-2">
                                        <i class="far fa-heart"></i>
                                    </button>
                                    @if (product.HasFreeShipping)
                                    {
                                        <span class="badge free-shipping-badge position-absolute top-0 start-0 m-2">
                                            <i class="fas fa-truck me-1"></i>ÜCRETSİZ KARGO
                                        </span>
                                    }
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@product.BrandName @product.Name</h5>
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= product.Rating)
                                                {
                                                    <i class="fas fa-star"></i>
                                                }
                                                else if (i - product.Rating < 1)
                                                {
                                                    <i class="fas fa-star-half-alt"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star"></i>
                                                }
                                            }
                                        </div>
                                        <span class="review-count ms-2">(@product.ReviewCount)</span>
                                    </div>
                                    <div class="mt-auto">
                                        <p class="price mb-3">@product.Price.ToString("N2") TL</p>
                                        <button class="btn btn-primary add-to-cart-btn w-100">
                                            <i class="fas fa-shopping-cart me-2"></i>Sepete Ekle
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
} 