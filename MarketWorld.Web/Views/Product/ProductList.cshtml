@model List<MarketWorld.Web.Models.ProductViewModel> 

@{
    ViewData["Title"] = Model.FirstOrDefault()?.CategoryName ?? "Ürünler";
    var brands = ViewBag.Brands as List<MarketWorld.Domain.Entities.Brand> ?? new List<MarketWorld.Domain.Entities.Brand>();
    var subCategoryName = ViewBag.SubCategoryName;
    var searchQuery = ViewBag.SearchQuery;
    var currentPage = 1;
}

@section Styles {
   <link rel="stylesheet" href="~/css/Product/product.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
}

<div class="container py-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb product-breadcrumb">
            <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
            @if (ViewBag.SearchQuery != null)
            {
                <li class="breadcrumb-item active">Arama Sonuçları: "@ViewBag.SearchQuery"</li>
            }
            else
            {
                <li class="breadcrumb-item"><a href="#">@Model.FirstOrDefault()?.CategoryName</a></li>
            }
        </ol>
    </nav>

    <div class="container-fluid py-4">
        <div class="row">
            <!-- Filtreler -->
            <div class="col-md-3">
                <div class="card filter-card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Filtreler</h5>
                        
                        <!-- Fiyat Aralığı -->
                        <div class="filter-section">
                            <h6 class="filter-section-title">Fiyat Aralığı</h6>
                            <div class="input-group mb-3">
                                <input type="number" class="form-control" placeholder="Min" id="minPrice">
                                <input type="number" class="form-control" placeholder="Max" id="maxPrice">
                            </div>
                        </div>

                        <!-- Markalar -->
                        <div class="filter-section brand-filter">
                            <h6 class="filter-section-title">Markalar</h6>
                            @if (brands.Any())
                            {
                                foreach (var brand in brands)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="@brand.Id" id="brand@(brand.Id)">
                                        <label class="form-check-label" for="brand@(brand.Id)">@brand.Name</label>
                                    </div>
                                }
                            }
                            else 
                            {
                                <p>Marka bulunamadı</p>
                            }
                        </div>

                        <!-- Değerlendirme -->
                        <div class="filter-section rating-filter">
                            <h6 class="filter-section-title">Değerlendirme</h6>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="5" id="rating5">
                                <label class="form-check-label" for="rating5">
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="4" id="rating4">
                                <label class="form-check-label" for="rating4">
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="3" id="rating3">
                                <label class="form-check-label" for="rating3">
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="2" id="rating2">
                                <label class="form-check-label" for="rating2">
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="1" id="rating1">
                                <label class="form-check-label" for="rating1">
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <div class="row row-cols-1 row-cols-md-3 gy-5" id="productContainer">
                    <!-- Model'den gelen ürünlerin doğrudan gösterilmesi -->
                    @if (Model.Any())
                    {
                        foreach (var product in Model)
                        {
                            <div class="col mb-4">
                                <div class="card product-card h-100">
                                    <a href="/Product/Detail/@product.Id" class="text-decoration-none">
                                        <div class="position-relative">
                                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" 
                                                onerror="this.src='/img/default-product.jpg';" />
                                            <button class="favorite-btn position-absolute top-0 end-0 m-2">
                                                <i class="far fa-heart"></i>
                                            </button>
                                            @if (product.HasFreeShipping)
                                            {
                                                <span class="badge free-shipping-badge position-absolute top-0 start-0 m-2">
                                                    <i class="fas fa-truck me-1"></i>ÜCRETSİZ KARGO
                                                </span>
                                            }
                                        </div>
                                        <div class="card-body">
                                            <h6 class="card-subtitle mb-2 text-muted">@product.BrandName</h6>
                                            <h5 class="card-title product-title">@product.Name</h5>
                                            <div class="product-info mb-2">
                                                <span class="product-code">Ürün Kodu: @(product.ProductCode > 0 ? product.ProductCode.ToString() : "000000")</span>
                                            </div>
                                            <div class="product-rating mb-2">
                                                <div class="stars d-flex align-items-center">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= product.Rating)
                                                        {
                                                            <i class="fas fa-star text-warning"></i>
                                                        }
                                                        else if (i - product.Rating < 1)
                                                        {
                                                            <i class="fas fa-star-half-alt text-warning"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="far fa-star text-warning"></i>
                                                        }
                                                    }
                                                    <span class="rating-value ms-2" style="color: #666; font-weight: 500;">@(product.Rating.ToString("0.0"))</span>
                                                    <span class="review-count text-muted ms-1">(@product.ReviewCount)</span>
                                                </div>
                                            </div>
                                            @if (product.HasDiscount && product.DiscountPrice.HasValue)
                                            {
                                                <div class="d-flex align-items-center gap-2">
                                                    <span class="product-price">@product.DiscountPrice.Value.ToString("N2") TL</span>
                                                    <span class="original-price text-decoration-line-through text-muted">@product.Price.ToString("N2") TL</span>
                                                    <span class="discount-badge">%@Math.Round((1 - product.DiscountPrice.Value / product.Price) * 100)</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="product-price">@product.Price.ToString("N2") TL</span>
                                            }
                                        </div>
                                        <div class="card-footer bg-transparent border-top-0">
                                            <button class="btn btn-primary add-to-cart-btn w-100" 
                                                    data-product-id="@product.Id"
                                                    data-product-color="@product.Color">
                                                <i class="fas fa-shopping-cart me-2"></i>Sepete Ekle
                                            </button>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else if (searchQuery != null)
                    {
                        <div class="col-12 text-center mt-5">
                            <p class="text-muted">Aradığınız "<strong>@searchQuery</strong>" ile ilgili sonuç bulunamadı.</p>
                            <p>Farklı arama terimleri deneyebilir veya kategorilere göz atabilirsiniz.</p>
                            <a href="/" class="btn btn-primary mt-3">Ana Sayfaya Dön</a>
                        </div>
                    }
                </div>
                <div id="loadingIndicator" class="text-center mt-4 d-none">
                    <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                    <p class="mt-2 text-muted">Ürünler yükleniyor...</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Sepete Ekle Modal -->
    <div class="modal fade" id="addToCartModal" tabindex="-1" aria-labelledby="addToCartModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addToCartModalLabel">Ürünü Sepete Ekle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <!-- Başarılı Ekleme Mesajı -->
                    <div id="successMessage" class="d-none text-center py-4">
                        <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                        <h5 class="text-success mb-3">Ürün Sepete Eklendi!</h5>
                        <div class="row justify-content-center mb-4">
                            <div class="col-md-6">
                                <div class="card border-0 shadow-sm">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <img src="" alt="" class="success-product-image rounded me-3" style="width: 80px; height: 80px; object-fit: cover;">
                                            <div class="text-start">
                                                <h6 class="success-product-name mb-2"></h6>
                                                <p class="text-muted mb-1 small">
                                                    <strong>Adet:</strong> <span class="success-quantity"></span>
                                                </p>
                                                <p class="text-muted mb-0 small">
                                                    <strong>Renk:</strong> <span class="success-color"></span>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2 col-6 mx-auto">
                            <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">
                                <i class="fas fa-shopping-basket me-2"></i>Alışverişe Devam Et
                            </button>
                            <a href="/Cart" class="btn btn-primary">
                                <i class="fas fa-shopping-cart me-2"></i>Sepete Git
                            </a>
                        </div>
                    </div>
                    <!-- Ürün Detayları -->
                    <div id="productDetails">
                        <div class="row">
                            <div class="col-md-5">
                                <img src="" alt="" class="product-image img-fluid rounded" style="width: 100%; object-fit: cover;">
                            </div>
                            <div class="col-md-7">
                                <div class="product-details mb-3">
                                    <h6 class="product-name fw-bold"></h6>
                                    <p class="product-price text-primary fw-bold mb-3"></p>
                                    <p class="product-color mb-3">
                                        <strong>Renk:</strong> <span></span>
                                    </p>
                                    <div class="form-group mb-3">
                                        <label for="quantity" class="form-label">Adet:</label>
                                        <input type="number" class="form-control" id="quantity" min="1" value="1">
                                    </div>
                                    <input type="hidden" id="color">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" id="modalFooter">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="button" class="btn btn-primary" id="confirmAddToCart">
                        <i class="fas fa-shopping-cart me-2"></i>Sepete Ekle
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentPage = 1;
        let isLoading = false;
        let hasMoreProducts = true;

        $(document).ready(function() {
            // İlk sayfa yüklendiğinde, products zaten sayfada gösterildiği için sayfa numarasını arttır
            currentPage = 2;
            
            // Fiyat filtresi değişikliğini dinle
            $('#minPrice, #maxPrice').on('input', debounce(function() {
                resetAndReload();
            }, 500));

            // Marka filtresi değişikliğini dinle
            $('.brand-filter input[type="checkbox"]').on('change', function() {
                resetAndReload();
            });

            // Değerlendirme filtresi değişikliğini dinle
            $('.rating-filter input[type="checkbox"]').on('change', function() {
                resetAndReload();
            });

            // Sonsuz kaydırma
            $(window).scroll(function() {
                if ($(window).scrollTop() + $(window).height() > $(document).height() - 100) {
                    loadMoreProducts();
                }
            });

            function resetAndReload() {
                currentPage = 1;
                hasMoreProducts = true;
                $('#productContainer').empty();
                loadMoreProducts();
            }

            function debounce(func, wait) {
                let timeout;
                return function executedFunction(...args) {
                    const later = () => {
                        clearTimeout(timeout);
                        func(...args);
                    };
                    clearTimeout(timeout);
                    timeout = setTimeout(later, wait);
                };
            }

            function loadMoreProducts() {
                if (isLoading || !hasMoreProducts) return;
                if (!('@subCategoryName') && '@searchQuery' != '') return; // Eğer arama yapılıyorsa ve subCategory yoksa daha fazla ürün yükleme

                isLoading = true;
                $('#loadingIndicator').removeClass('d-none');

                // Seçili markaları al
                const selectedBrands = $('.brand-filter input:checked').map(function() {
                    return $(this).val();
                }).get();

                // Seçili derecelendirmeleri al
                const selectedRatings = $('.rating-filter input:checked').map(function() {
                    return $(this).val();
                }).get();

                // Fiyat aralığını al
                const minPrice = parseFloat($('#minPrice').val()) || 0;
                const maxPrice = parseFloat($('#maxPrice').val()) || 0;

                // URL'yi oluştur
                const url = new URL('@Url.Action("LoadMoreProducts", "Product")', window.location.origin);
                url.searchParams.append('subCategoryName', '@subCategoryName');
                url.searchParams.append('page', currentPage);
                
                // Marka filtrelerini ekle
                selectedBrands.forEach(brandId => {
                    url.searchParams.append('brandIds', brandId);
                });

                // Derecelendirme filtrelerini ekle
                selectedRatings.forEach(rating => {
                    url.searchParams.append('ratings', rating);
                });

                // Fiyat filtrelerini ekle
                if (minPrice > 0) url.searchParams.append('minPrice', minPrice);
                if (maxPrice > 0) url.searchParams.append('maxPrice', maxPrice);

                console.log('İstek URL:', url.toString()); // Debug için

                $.get(url.toString())
                    .done(function(response) {
                        console.log('Sunucu yanıtı:', response); // Debug için
                        if (response.products?.length) {
                            response.products.forEach(p => $('#productContainer').append(createProductCard(p)));
                            currentPage++;
                            hasMoreProducts = response.hasMore;
                        } else {
                            hasMoreProducts = false;
                            if (currentPage === 1) {
                                $('#productContainer').html('<div class="col-12 text-center"><p class="text-muted">Bu kriterlere uygun ürün bulunamadı.</p></div>');
                            }
                        }
                    })
                    .fail(function() {
                        alert('Ürünler yüklenirken bir hata oluştu.');
                    })
                    .always(function() {
                        isLoading = false;
                        $('#loadingIndicator').addClass('d-none');
                    });
            }

            function createProductCard(product) {
                const priceDisplay = product.hasDiscount && product.discountPrice ? `
                    <div class="d-flex align-items-center gap-2">
                        <span class="product-price">${product.discountPrice.toLocaleString('tr-TR', { minimumFractionDigits: 2 })} TL</span>
                        <span class="original-price text-decoration-line-through text-muted">${product.price.toLocaleString('tr-TR', { minimumFractionDigits: 2 })} TL</span>
                        <span class="discount-badge">%${Math.round((1 - product.discountPrice / product.price) * 100)}</span>
                    </div>
                ` : `
                    <span class="product-price">${product.price.toLocaleString('tr-TR', { minimumFractionDigits: 2 })} TL</span>
                `;

                return `
                    <div class="col mb-4">
                        <div class="card product-card h-100">
                            <a href="/Product/Detail/${product.id}" class="text-decoration-none">
                                <div class="position-relative">
                                    <img src="${product.imageUrl}" class="card-img-top" alt="${product.name}" 
                                         onerror="this.src='/img/default-product.jpg';" />
                                    <button class="favorite-btn position-absolute top-0 end-0 m-2">
                                        <i class="far fa-heart"></i>
                                    </button>
                                    ${product.hasFreeShipping ? `
                                        <span class="badge free-shipping-badge position-absolute top-0 start-0 m-2">
                                            <i class="fas fa-truck me-1"></i>ÜCRETSİZ KARGO
                                        </span>
                                    ` : ''}
                                </div>
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">${product.brandName}</h6>
                                    <h5 class="card-title product-title">${product.name}</h5>
                                    <div class="product-info mb-2">
                                        <span class="product-code">Ürün Kodu: ${product.productCode > 0 ? product.productCode : '000000'}</span>
                                    </div>
                                    <div class="product-rating mb-2">
                                        <div class="stars d-flex align-items-center">
                                            ${getRatingStars(product.rating)}
                                            <span class="rating-value ms-2" style="color: #666; font-weight: 500;">${product.rating.toFixed(1)}</span>
                                            <span class="review-count text-muted ms-1">(${product.reviewCount})</span>
                                        </div>
                                    </div>
                                    ${priceDisplay}
                                </div>
                                <div class="card-footer bg-transparent border-top-0">
                                    <button class="btn btn-primary add-to-cart-btn w-100" 
                                            data-product-id="${product.id}"
                                            data-product-color="${product.color}">
                                        <i class="fas fa-shopping-cart me-2"></i>Sepete Ekle
                                    </button>
                                </div>
                            </a>
                        </div>
                    </div>
                `;
            }

            function getRatingStars(rating) {
                let stars = '';
                for (let i = 1; i <= 5; i++) {
                    if (i <= rating) {
                        stars += '<i class="fas fa-star text-warning"></i>';
                    } else if (i - rating < 1) {
                        stars += '<i class="fas fa-star-half-alt text-warning"></i>';
                    } else {
                        stars += '<i class="far fa-star text-warning"></i>';
                    }
                }
                return stars;
            }

            // Sepete ekle butonu işlevselliği
            let selectedProductId = null;
            let selectedProductName = '';
            let selectedProductPrice = '';
            let selectedProductImage = '';
            let selectedProductColor = '';

            $(document).on('click', '.add-to-cart-btn', function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                const card = $(this).closest('.card');
                selectedProductId = $(this).data('product-id');
                selectedProductName = card.find('.product-title').text();
                selectedProductPrice = card.find('.product-price').text();
                selectedProductImage = card.find('.card-img-top').attr('src');
                selectedProductColor = $(this).data('product-color');

                // Modal içeriğini güncelle
                $('#addToCartModal .product-name').text(selectedProductName);
                $('#addToCartModal .product-price').text(selectedProductPrice);
                $('#addToCartModal .product-image').attr('src', selectedProductImage);
                $('#addToCartModal .product-image').attr('alt', selectedProductName);
                $('#addToCartModal .product-color span').text(selectedProductColor);
                $('#addToCartModal #color').val(selectedProductColor);
                
                // Modalı göster
                var modal = new bootstrap.Modal(document.getElementById('addToCartModal'));
                modal.show();
            });

            // Sepete Ekle onaylama
            $('#confirmAddToCart').on('click', function() {
                const quantity = $('#quantity').val();
                const color = $('#color').val();

                $.post('/Cart/AddToCart', { 
                    productId: selectedProductId, 
                    quantity: quantity,
                    color: color
                })
                .done(function(response) {
                    if (response.success) {
                        // Başarılı ekleme durumunda
                        $('#productDetails, #modalFooter').addClass('d-none');
                        
                        // Başarılı mesaj içeriğini güncelle
                        $('.success-product-image').attr('src', selectedProductImage);
                        $('.success-product-name').text(selectedProductName);
                        $('.success-quantity').text(quantity);
                        $('.success-color').text(selectedProductColor);
                        
                        $('#successMessage').removeClass('d-none');
                        $(document).trigger('cartUpdated');
                    } else {
                        if (response.redirect) {
                            window.location.href = response.redirect;
                        } else {
                            alert(response.message);
                        }
                    }
                })
                .fail(function(xhr) {
                    alert('Sepete eklerken bir hata oluştu. Lütfen daha sonra tekrar deneyiniz.');
                });
            });

            // Modal kapanırken içeriği sıfırla
            $('#addToCartModal').on('hidden.bs.modal', function () {
                $('#successMessage').addClass('d-none');
                $('#productDetails, #modalFooter').removeClass('d-none');
                $('#quantity').val(1);
            });
        });
    </script>
} 