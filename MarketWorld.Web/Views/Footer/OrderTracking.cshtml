@{
    ViewData["Title"] = "Sipariş Takibi";
}

<link rel="stylesheet" href="~/css/order-tracking.css" />

<div class="container mt-5">
    <div class="tracking-header text-center">
        <i class="bi bi-box-seam display-1 mb-4"></i>
        <h1>Sipariş Takibi</h1>
        <p class="text-muted">Siparişinizin güncel durumunu takip edin</p>
    </div>

    <div class="tracking-search mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Sipariş takip numaranızı giriniz">
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-search me-2"></i>Sorgula
                    </button>
                </div>
                <small class="text-muted mt-2 d-block text-center">Örnek: 1234567890</small>
            </div>
        </div>
    </div>

    <div class="tracking-timeline mt-5">
        <div class="timeline-item completed">
            <div class="timeline-icon">
                <i class="bi bi-shop"></i>
            </div>
            <div class="timeline-content">
                <h6>Mağazadan Çıkış</h6>
                <p>Siparişiniz mağazadan çıkış yaptı</p>
                <small>12 Mart 2024, 14:30</small>
            </div>
        </div>

        <div class="timeline-item completed">
            <div class="timeline-icon">
                <i class="bi bi-box-seam"></i>
            </div>
            <div class="timeline-content">
                <h6>Transfer Merkezinde</h6>
                <p>Siparişiniz ana transfer merkezine ulaştı</p>
                <small>12 Mart 2024, 18:45</small>
            </div>
        </div>

        <div class="timeline-item active">
            <div class="timeline-icon">
                <i class="bi bi-truck"></i>
            </div>
            <div class="timeline-content">
                <h6>Dağıtım Merkezinde</h6>
                <p>Siparişiniz size en yakın dağıtım merkezinde</p>
                <small>13 Mart 2024, 09:15</small>
            </div>
        </div>

        <div class="timeline-item">
            <div class="timeline-icon">
                <i class="bi bi-geo-alt"></i>
            </div>
            <div class="timeline-content">
                <h6>Dağıtıma Çıktı</h6>
                <p>Siparişiniz dağıtıma çıktı</p>
                <small>Bekleniyor</small>
            </div>
        </div>

        <div class="timeline-item">
            <div class="timeline-icon">
                <i class="bi bi-house-check"></i>
            </div>
            <div class="timeline-content">
                <h6>Teslim Edildi</h6>
                <p>Siparişiniz adrese teslim edildi</p>
                <small>Bekleniyor</small>
            </div>
        </div>
    </div>

    <div class="tracking-info mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="info-cards">
                    <div class="info-card">
                        <i class="bi bi-clock-history"></i>
                        <h6>Teslimat Süresi</h6>
                        <p>2-3 iş günü içinde teslimat</p>
                    </div>
                    <div class="info-card">
                        <i class="bi bi-shield-check"></i>
                        <h6>Güvenli Teslimat</h6>
                        <p>Temassız ve güvenli teslimat</p>
                    </div>
                    <div class="info-card">
                        <i class="bi bi-geo"></i>
                        <h6>Adres Değişikliği</h6>
                        <p>Teslimat adresi güncellenebilir</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="help-section mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <p class="mb-3">Siparişinizle ilgili sorun mu yaşıyorsunuz?</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="tel:+905550001234" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-telephone me-2"></i>Sipariş Destek
                    </a>
                    <button class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-chat-dots me-2"></i>Canlı Destek
                    </button>
                    <a href="mailto:siparis@marketworld.com" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-envelope me-2"></i>Mail Gönder
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mb-5"></div>
