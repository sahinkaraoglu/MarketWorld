@model IEnumerable<MarketWorld.Core.Domain.Entities.Category>

@{
    ViewData["Title"] = "Kategori Yönetimi";
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Alt kategori düzenleme modalı açıldığında
            $('.edit-subcategory').on('click', function () {
                var id = $(this).data('id');
                var name = $(this).data('name');
                var parentId = $(this).data('parent-id');

                console.log('Alt kategori düzenleme:', { id, name, parentId }); // Debug için

                $('#editSubCategoryId').val(id);
                $('#editSubCategoryName').val(name);
                $('#editSubCategoryParent').val(parentId);
            });

            // Alt kategori güncelleme butonu tıklandığında
            $('#updateSubCategory').on('click', function () {
                var id = parseInt($('#editSubCategoryId').val());
                var name = $('#editSubCategoryName').val();
                var description = $('#editSubCategoryDescription').val();
                var isActive = $('#editSubCategoryStatus').val() === 'active';
                var categoryId = parseInt($('#editSubCategoryParent').val());

                console.log('Alt kategori güncelleme:', { id, name, description, isActive, categoryId }); // Debug için

                if (!id) {
                    alert('Alt kategori ID bulunamadı!');
                    return;
                }

                var data = {
                    id: id,
                    name: name,
                    description: description,
                    isActive: isActive,
                    categoryId: categoryId
                };

                $.ajax({
                    url: '/Admin/Category/UpdateSubCategory',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function (response) {
                        if (response.success) {
                            $('#editSubCategoryModal').modal('hide');
                            location.reload();
                        } else {
                            alert('Hata: ' + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('AJAX Hatası:', { xhr, status, error }); // Debug için
                        alert('Bir hata oluştu: ' + error);
                    }
                });
            });

            // Ana kategori düzenleme modalı açıldığında
            $('.edit-category').on('click', function () {
                var id = $(this).data('id');
                var name = $(this).data('name');

                $('#editCategoryId').val(id);
                $('#editCategoryName').val(name);
            });

            // Ana kategori güncelleme butonu tıklandığında
            $('#updateCategory').on('click', function () {
                var id = $('#editCategoryId').val();
                var name = $('#editCategoryName').val();
                var description = $('#editCategoryDescription').val();
                var status = $('#editCategoryStatus').val() === 'active';

                var data = {
                    id: id,
                    name: name,
                    description: description,
                    status: status
                };

                $.ajax({
                    url: '/Admin/Category/UpdateCategory',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function (response) {
                        if (response.success) {
                            $('#editCategoryModal').modal('hide');
                            location.reload();
                        } else {
                            alert('Hata: ' + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Bir hata oluştu: ' + error);
                    }
                });
            });

            // Kategori tipi değiştiğinde ana kategori seçimini göster/gizle
            $('#categoryType').on('change', function () {
                if ($(this).val() === 'sub') {
                    $('#mainCategorySelect').show();
                } else {
                    $('#mainCategorySelect').hide();
                }
            });

            // Yeni kategori kaydetme butonu tıklandığında
            $('#saveCategory').on('click', function () {
                var categoryType = $('#categoryType').val();
                var name = $('#categoryName').val();
                var description = $('#categoryDescription').val();
                var status = $('#categoryStatus').val() === 'active';
                var parentId = categoryType === 'sub' ? $('#parentCategory').val() : null;

                var data = {
                    name: name,
                    description: description,
                    status: status,
                    parentCategoryId: parentId
                };

                $.ajax({
                    url: '/Admin/Category/CreateCategory',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function (response) {
                        if (response.success) {
                            $('#addCategoryModal').modal('hide');
                            location.reload();
                        } else {
                            alert('Hata: ' + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Bir hata oluştu: ' + error);
                    }
                });
            });

            // Kategori silme butonu tıklandığında
            $('.delete-category').on('click', function () {
                if (confirm('Bu kategoriyi silmek istediğinizden emin misiniz?')) {
                    var id = $(this).data('id');
                    $.ajax({
                        url: '/Admin/Category/DeleteCategory/' + id,
                        type: 'POST',
                        success: function (response) {
                            if (response.success) {
                                location.reload();
                            } else {
                                alert('Hata: ' + response.message);
                            }
                        },
                        error: function (xhr, status, error) {
                            alert('Bir hata oluştu: ' + error);
                        }
                    });
                }
            });

            // Alt kategori silme butonu tıklandığında
            $('.delete-subcategory').on('click', function () {
                if (confirm('Bu alt kategoriyi silmek istediğinizden emin misiniz?')) {
                    var id = $(this).data('id');
                    $.ajax({
                        url: '/Admin/Category/DeleteSubCategory/' + id,
                        type: 'POST',
                        success: function (response) {
                            if (response.success) {
                                location.reload();
                            } else {
                                alert('Hata: ' + response.message);
                            }
                        },
                        error: function (xhr, status, error) {
                            alert('Bir hata oluştu: ' + error);
                        }
                    });
                }
            });
        });
    </script>
}

<div class="categories-container">
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="page-title">Kategori Yönetimi</h1>
                    <p class="page-subtitle">Kategorileri yönetin, düzenleyin ve yenilerini ekleyin</p>
                </div>
                <div class="col-lg-4 text-end">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                        <i class="bi bi-plus-circle me-1"></i> Yeni Kategori Ekle
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="container content-section">
        <!-- Ana Kategoriler -->
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="bi bi-list-ul me-2"></i>Ana Kategoriler</h5>
            </div>
            <div class="card-body">
                <table class="table table-hover table-categories">
                    <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th width="50%">Kategori Adı</th>
                            <th width="15%">Ürün Sayısı</th>
                            <th width="15%">Durum</th>
                            <th width="15%">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int counter = 1;
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>@category.Name</td>
                                    <td>@(category.Products?.Count ?? 0)</td>
                                    <td><span class="badge bg-success">Aktif</span></td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary edit-category" 
                                                    data-id="@category.Id" 
                                                    data-name="@category.Name" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#editCategoryModal">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-outline-danger delete-category" 
                                                    data-id="@category.Id" 
                                                    data-name="@category.Name">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">Henüz ana kategori bulunmamaktadır.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Alt Kategoriler -->
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-diagram-3 me-2"></i>Alt Kategoriler</h5>
            </div>
            <div class="card-body">
                <table class="table table-hover table-categories">
                    <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th width="35%">Alt Kategori Adı</th>
                            <th width="25%">Ana Kategori</th>
                            <th width="15%">Ürün Sayısı</th>
                            <th width="10%">Durum</th>
                            <th width="10%">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int subCounter = 1;
                            bool hasSubCategories = false;
                        }
                        
                        @foreach (var category in Model)
                        {
                            if (category.SubCategories != null && category.SubCategories.Any())
                            {
                                hasSubCategories = true;
                                foreach (var subCategory in category.SubCategories)
                                {
                                    <tr>
                                        <td>@subCounter</td>
                                        <td>@subCategory.Name</td>
                                        <td>@category.Name</td>
                                        <td>@(subCategory.Products?.Count ?? 0)</td>
                                        <td><span class="badge bg-success">Aktif</span></td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-primary edit-subcategory" 
                                                        data-id="@subCategory.Id" 
                                                        data-name="@subCategory.Name" 
                                                        data-parent-id="@category.Id"
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#editSubCategoryModal">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                <button class="btn btn-outline-danger delete-subcategory" 
                                                        data-id="@subCategory.Id" 
                                                        data-name="@subCategory.Name">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    subCounter++;
                                }
                            }
                        }
                        
                        @if (!hasSubCategories)
                        {
                            <tr>
                                <td colspan="6" class="text-center">Henüz alt kategori bulunmamaktadır.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Yeni Kategori Ekleme Modal -->
<div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCategoryModalLabel">Yeni Kategori Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <form id="addCategoryForm" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="categoryType" class="form-label">Kategori Tipi</label>
                        <select class="form-select" id="categoryType" name="categoryType">
                            <option value="main">Ana Kategori</option>
                            <option value="sub">Alt Kategori</option>
                        </select>
                    </div>
                    <div class="mb-3" id="mainCategorySelect" style="display: none;">
                        <label for="parentCategory" class="form-label">Ana Kategori</label>
                        <select class="form-select" id="parentCategory" name="parentCategory">
                            @foreach (var category in Model)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Kategori Adı</label>
                        <input type="text" class="form-control" id="categoryName" name="categoryName" required>
                    </div>
                    <div class="mb-3">
                        <label for="categoryDescription" class="form-label">Açıklama</label>
                        <textarea class="form-control" id="categoryDescription" name="categoryDescription" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="categoryStatus" class="form-label">Durum</label>
                        <select class="form-select" id="categoryStatus" name="categoryStatus">
                            <option value="active">Aktif</option>
                            <option value="inactive">Pasif</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="saveCategory">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<!-- Kategori Düzenleme Modal -->
<div class="modal fade" id="editCategoryModal" tabindex="-1" aria-labelledby="editCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editCategoryModalLabel">Kategori Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <form id="editCategoryForm" method="post" enctype="multipart/form-data">
                    <input type="hidden" id="editCategoryId" name="categoryId">
                    <div class="mb-3">
                        <label for="editCategoryName" class="form-label">Kategori Adı</label>
                        <input type="text" class="form-control" id="editCategoryName" name="categoryName" required>
                    </div>
                    <div class="mb-3">
                        <label for="editCategoryDescription" class="form-label">Açıklama</label>
                        <textarea class="form-control" id="editCategoryDescription" name="categoryDescription" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editCategoryStatus" class="form-label">Durum</label>
                        <select class="form-select" id="editCategoryStatus" name="categoryStatus">
                            <option value="active" selected>Aktif</option>
                            <option value="inactive">Pasif</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="updateCategory">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<!-- Alt Kategori Düzenleme Modal -->
<div class="modal fade" id="editSubCategoryModal" tabindex="-1" aria-labelledby="editSubCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editSubCategoryModalLabel">Alt Kategori Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <form id="editSubCategoryForm" method="post" enctype="multipart/form-data">
                    <input type="hidden" id="editSubCategoryId" name="id">
                    <div class="mb-3">
                        <label for="editSubCategoryName" class="form-label">Alt Kategori Adı</label>
                        <input type="text" class="form-control" id="editSubCategoryName" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="editSubCategoryDescription" class="form-label">Açıklama</label>
                        <textarea class="form-control" id="editSubCategoryDescription" name="description" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editSubCategoryParent" class="form-label">Ana Kategori</label>
                        <select class="form-select" id="editSubCategoryParent" name="parentCategoryId">
                            @foreach (var category in Model)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="editSubCategoryStatus" class="form-label">Durum</label>
                        <select class="form-select" id="editSubCategoryStatus" name="status">
                            <option value="active" selected>Aktif</option>
                            <option value="inactive">Pasif</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="updateSubCategory">Kaydet</button>
            </div>
        </div>
    </div>
</div>

